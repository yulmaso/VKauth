<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="cardViewStyle">@style/CardViewMainStyle</item>
        <item name="buttonStyle">@style/ButtonMainStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="CardViewMainStyle" parent="Theme.MaterialComponents.Light">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="ButtonMainStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
